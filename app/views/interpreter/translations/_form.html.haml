= form_for @translation do |f|
  = render :partial => 'errors', :locals => {:object => @translation}
  .field
    = f.label :locale
    %br
    = f.text_field :locale
  .field
    = f.label :key
    %br
    = f.text_field :key
  .field
    = f.label :value
    %br
    = f.text_field :value
  .actions
    = f.submit "Save"
